{
  "compilerOptions": {
    // 1. Core Output Settings
    "target": "es2020",                // Modern JS features
    "module": "commonjs",              // Standard for Node.js backends
    "lib": ["es2020"],                 // Library definitions
    
    // 2. Path & Resolution
    "rootDir": "./src",                // Where your code lives
    "outDir": "./dist",                // Where built code goes
    "moduleResolution": "node",        // Standard Node resolution strategy
    "esModuleInterop": true,           // Allows importing CommonJS modules cleanly
    
    // 3. Strictness (High-End Standards)
    "strict": true,                    // Enable all strict type checks
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,              // Skip checking .d.ts files in node_modules to save time
    
    // 4. Disable Frontend Settings
    "jsx": "preserve"                  // Not needed for backend, but 'preserve' prevents errors if referenced
  },
  "include": ["src/**/*", "prisma/**/*"],
  "exclude": ["node_modules", "dist"]
}